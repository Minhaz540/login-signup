<%- include("./template/header.ejs") %> 
<body class="text-center">
    <main class="form-signin">
        <form action="/signup" enctype="multipart/form-data" method="post">
            <a href="http://localhost:8080/"><img class="mb-4 rounded" src="../image/logo.jpg" alt="logo" width="72"></a>
            <h1 class="h3 mb-3 fw-normal">Please Sign up</h1>

            <div class="form-floating">
                <input type="text" name="username" class="form-control" id="floatingInput" required placeholder="name" pattern="[A-Za-z0-9]{4,}" title="Username must not contain special characters or less than 4 characters">
                <label for="floatingInput">Username</label>
            </div>
            <div class="form-floating">
                <input type="email" name="email" class="form-control" id="floatingInput" required placeholder="name@example.com">
                <label for="floatingInput">Email address</label>
            </div>
            <div class="form-floating containing-eye">
                <input type="password" oninput="enableCheckPasswordAndEyeBtn();" name="password" class="form-control opPassword mb-0" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" id="floatingPassword" required placeholder="Password" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters">
                <label id="password" for="floatingPassword">Password</label>
                <i class="bi bi-eye-slash" id="togglePassword"></i>
            </div>
            <div class="form-floating">
                <input type="password" name="confirmPassword" class="form-control checkPassword" id="floatingPassword" required disabled placeholder="Confirm Password">
                <label id="checkPassword" for="floatingPassword">Confirm Password</label>
            </div>
            <div class="mb-3">
                <label for="formFile" class="form-label">Choose profile picture</label>
                <input name="profile" class="form-control" type="file" id="formFile" required>
            </div>

            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign up</button>
            <p class="mt-2">Already have an account? <a href="/login">Login</a></p>
            <p class="mt-4 mb-3 text-muted">&copy; 2017â€“2021</p>
        </form>
    </main>
