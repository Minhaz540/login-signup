<%- include("./template/header.ejs") %> 
<body class="text-center">
    <main class="form-signin">
        <form action="/login" enctype="application/x-www-form-urlencoded" method="post">
            <a href="/"><img class="mb-4 rounded" src="../image/logo.jpg" alt="logo" width="72"></a>
            <h1 class="h3 mb-3 fw-normal">Please Log in</h1>

            <% if(typeof msg != "undefined") { %> 
                <div class="form-control form-error-msg">
                    <span><%= msg %> </span>
                </div>
            <% } %> 
            <div class="form-floating">
                <input name="usernameOrEmail" type="text" class="form-control" id="floatingInput" required placeholder="Email or Username">
                <label for="floatingInput">Email or Username</label>
            </div>
            <div class="form-floating containing-eye">
                <input name="password" type="password" class="form-control opPassword" id="floatingPassword" oninput="trackEyeBtn();" required placeholder="Password">
                <label for="floatingPassword">Password</label>
                <i class="bi bi-eye-slash" id="togglePassword"></i>
            </div>

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" id="rememberMe" value="lsRememberMe"> Remember me
                </label>
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Log in</button>
            <p class="mt-2">Don't have an account? <a href="/signup">Signup</a></p>
            <p class="mt-5 mb-3 text-muted">&copy; 2017â€“2021</p>
        </form>
    </main>
<%- include("./template/footer.ejs") %> 
